@model List<Instructor>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a href="/instructor/add" class="btn btn-success">New</a>
<table class="table table-bordered table-hover">
    <tr>
        <td>No.</td>
        <td>Name</td>
        <td>Salary</td>
        <td>Department</td>
        <td>Course</td>
        <td>Image</td>
        <td>---</td>

    </tr>
    @foreach (var item in @Model)
    {
        <tbody>
        <td>
                @item.Id
        </td>
        <td>
                @item.Name
        </td>
        <td>
                @item.Salary
        </td>
        <td>
                @item.Department.Name
        </td>
        <td>
                @item.Course.Name
        </td>
        <td>
            <img src="/Images/@item.Image" style="width:40px"/>
        </td>
        <td><a href="/instructor/details/@item.Id">Edit</a></td>
        </tbody>
    }
</table>
