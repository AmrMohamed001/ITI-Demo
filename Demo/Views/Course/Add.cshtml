@model Course

@{
    ViewBag.Title = "Add New Course";
    SelectList optsList = new SelectList(ViewBag.DeptList, "Id", "Name");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4 text-center">Add New Course</h2>

            <form asp-action="save" method="post">

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Course Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter course name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Degree" class="form-label">Degree</label>
                    <input asp-for="Degree" type="number" step="0.01" class="form-control" placeholder="Enter course degree" required />
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MinDegree" class="form-label">Minimum Degree</label>
                    <input asp-for="MinDegree" type="number" step="0.01" class="form-control" placeholder="Enter minimum degree" required />
                    <span asp-validation-for="MinDegree" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartmentId" class="form-label">Department ID</label>
                    <select asp-for="DepartmentId" asp-items="optsList">
                        <option value="0">-- Select Department --</option>
                    </select>
                    
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Course
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


